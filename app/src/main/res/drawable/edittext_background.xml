<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo -->
    <solid android:color="@android:color/white"/>

    <!-- Borda fina -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Cantos arredondados -->
    <corners android:radius="16dp"/>

    <!-- Pequeno padding interno -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>
